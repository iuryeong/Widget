{
  "manifest_version": 3,
  "name": "Widget - Browser Side Panel",
  "version": "1.0.0",
  "description": "브라우저 사이드 위젯 확장 프로그램",
  "permissions": [
    "storage",
    "sidePanel",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_title": "Open Widget Side Panel"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/api/*.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
   "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https:; img-src 'self' https: data:;"
  }
}