{
  "manifest_version": 3,
  "name": "Widget - Browser Side Panel",
  "version": "1.0.0",
  "description": "브라우저 사이드 위젯 확장 프로그램",
  "permissions": [
    "storage",
    "sidePanel",
    "tabs",
    "activeTab",
    "scripting",
    "declarativeNetRequest",
    "geolocation"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "action": {
    "default_title": "Open Widget Side Panel"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["main.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["notifications.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https:; img-src 'self' https: data:; frame-src 'self' https://www.youtube.com https://www.youtube-nocookie.com; media-src 'self' https:;"
  }
}